<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frontend.UserItemPage"
             Background="#AC72A6">
    <ContentPage.Content>
        <Frame CornerRadius="20" HasShadow="False" HeightRequest="200" WidthRequest="315" BackgroundColor="#F6D5F3" BorderColor="Gray" Margin="20">
            <StackLayout>
                <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" TextColor="Gray" x:Name="Name" Text="{Binding Name}"/>
                <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" TextColor="Gray" x:Name="Surname" Text="{Binding Surname}"/>
                <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" TextColor="Gray" x:Name="Login" Text="{Binding Login}"/>
                <Label VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" TextColor="Gray" x:Name="Status" Text="{Binding Status}"/>
                <Button Background="#AC72A6" TextColor="White" Margin="0,0,0,0" HeightRequest="50" CornerRadius="10" Text="Изменить статус" Clicked="ChangeStatus"/>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>